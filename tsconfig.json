{
  "compilerOptions": {
    "rootDir": "components",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["components/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
